#!/usr/bin/expect

set host [ lindex $argv 0 ]
set password [ lindex $argv 1 ]
set srcDir [ lindex $argv 2 ]
set destPath [ lindex $argv 3 ]
set timeout 10


spawn scp -r $srcDir root@$host:$destPath
expect {
	"*yes/no" { send "yes\r"; exp_continue}
	"*password:" { send "$password\r" }
}

set timeout 10
expect eof
exit
